@Override
public CreateIncidentResponse mapToDto(IncidentEntity incident) {
    CreateIncidentResponse createIncidentResponse = new CreateIncidentResponse();
    
    createIncidentResponse.setDescription(incident.getDescription());
    createIncidentResponse.setTitre(incident.getTitre());
    createIncidentResponse.setServiceId(incident.getService().getId());
    createIncidentResponse.setClientId(incident.getClient().getId());
    createIncidentResponse.setCoeDevId(incident.getCoeDev().getId());
    createIncidentResponse.setFichierJoint(incident.getFichierJoint());

    // Ajout des nouveaux champs
    if (incident.getPriorite() != null) {
        createIncidentResponse.setPriorite(incident.getPriorite());
    } else {
        System.out.println("Priorité non définie pour cet incident");
    }

    if (incident.getGravite() != null) {
        createIncidentResponse.setGravite(incident.getGravite());
    } else {
        System.out.println("Gravité non définie pour cet incident");
    }

    if (incident.getStatut() != null) {
        createIncidentResponse.setStatut(incident.getStatut());
    } else {
        System.out.println("Statut non défini pour cet incident");
    }

    return createIncidentResponse;
}
