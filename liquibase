<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-incident-table" author="oulja">

        <createTable tableName="incident">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <!-- Champ discriminateur -->
            <column name="incident_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <!-- Champs communs -->
            <column name="titre" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="dateDeclaration" type="TIMESTAMP"/>
            <column name="statut" type="VARCHAR(50)"/>
            <column name="priorite" type="VARCHAR(50)"/>
            <column name="gravite" type="VARCHAR(50)"/>
            <column name="environnement" type="VARCHAR(50)"/>
            <column name="du" type="VARCHAR(50)"/>

            <!-- Champs spécifiques aux incidents MANUELS -->
            <column name="dateAttribution" type="TIMESTAMP"/>
            <column name="dateResolution" type="TIMESTAMP"/>
            <column name="client_id" type="VARCHAR(255)"/>
            <column name="coe_dev_id" type="VARCHAR(255)"/>
            <column name="service_id" type="BIGINT"/>

            <!-- Champs spécifiques aux incidents AUTOMATIQUES -->
            <column name="trace_id" type="VARCHAR(255)"/>
            <column name="entity" type="VARCHAR(255)"/>
        </createTable>

        <!-- Relations FK -->
        <addForeignKeyConstraint baseTableName="incident"
                                 baseColumnNames="client_id"
                                 constraintName="fk_incident_client"
                                 referencedTableName="user"
                                 referencedColumnNames="sub"/>

        <addForeignKeyConstraint baseTableName="incident"
                                 baseColumnNames="coe_dev_id"
                                 constraintName="fk_incident_coedev"
                                 referencedTableName="user"
                                 referencedColumnNames="sub"/>

        <addForeignKeyConstraint baseTableName="incident"
                                 baseColumnNames="service_id"
                                 constraintName="fk_incident_service"
                                 referencedTableName="service"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Table pour file paths (MANUEL) -->
    <changeSet id="create-incident-filepaths" author="oulja">
        <createTable tableName="incident_file_paths">
            <column name="incident_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="file_path" type="VARCHAR(500)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="incident_file_paths"
                                 baseColumnNames="incident_id"
                                 constraintName="fk_filepaths_incident"
                                 referencedTableName="incident"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Table pour tags -->
    <changeSet id="create-incident-tags" author="oulja">
        <createTable tableName="incident_tags">
            <column name="incident_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="incident_tags"
                                 baseColumnNames="incident_id"
                                 constraintName="fk_tags_incident"
                                 referencedTableName="incident"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
