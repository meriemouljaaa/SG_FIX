@OneToMany(mappedBy = "incident", cascade = CascadeType.ALL, orphanRemoval = true)
    private List<CommentaireEntity> commentaires;

package com.socgen.unibank.services.gateways.outbound.persistence.jpa;

import jakarta.persistence.*;
import lombok.Data;

import java.util.Date;
import java.util.Map;

@Entity
@Table(name = "commentaire")
@Data
public class CommentaireEntity {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(name = "contenu", nullable = false)
    private String contenu;

    @ManyToOne
    @JoinColumn(name = "incident_id", nullable = false)
    private IncidentEntity incident;

    @ManyToOne
    @JoinColumn(name = "auteur_id", referencedColumnName = "igg", nullable = false)
    private UserEntity auteur;

    @Column(name = "date_creation", nullable = false)
    private Date dateCreation;

    @ElementCollection
    @CollectionTable(name = "commentaire_reactions", joinColumns = @JoinColumn(name = "commentaire_id"))
    @MapKeyColumn(name = "reaction_type")
    @Column(name = "utilisateur_id")
    private Map<String, String> reactions; // Ex: "LIKE" -> "igg de l'utilisateur"

    @ManyToOne
    @JoinColumn(name = "parent_commentaire_id", nullable = true)
    private CommentaireEntity parentCommentaire; // Le commentaire parent auquel ce commentaire r√©pond
}
