import React, { useEffect, useState } from "react";

const SseTest = () => {
  const [events, setEvents] = useState([]);
  const [status, setStatus] = useState("â³ Connexion en cours...");

  useEffect(() => {
    const eventSource = new EventSource("http://localhost:8080/subscribe");

    eventSource.onopen = () => {
      console.log("âœ… Connexion ouverte");
      setStatus("âœ… ConnectÃ© au serveur SSE");
    };

    eventSource.addEventListener("INIT", (event) => {
      console.log("INIT reÃ§u :", event);
    });

    eventSource.addEventListener("latestNews", (event) => {
      console.log("ğŸŸ¢ Ã‰vÃ©nement reÃ§u :", event.data);
      setEvents((prev) => [...prev, event.data]);
    });

    eventSource.onerror = (err) => {
      console.error("âŒ Erreur SSE :", err);
      setStatus("âŒ Erreur de connexion SSE");
      eventSource.close();
    };

    // Nettoyage quand le composant est dÃ©montÃ©
    return () => {
      eventSource.close();
    };
  }, []);

  return (
    <div style={{ padding: "20px", fontFamily: "Arial" }}>
      <h2>ğŸ“° Ã‰vÃ©nements SSE reÃ§us</h2>
      <p>{status}</p>
      <ul>
        {events.map((msg, index) => (
          <li key={index}>ğŸ“¢ {msg}</li>
        ))}
      </ul>
    </div>
  );
};

export default SseTest;
