const handleChangeStatus = async (newStatus: IncidentStatus) => {
  try {
    const response = await fetch(`/api/incidents/${currentIncident.id}/status`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ status: newStatus }),
    });

    if (response.ok) {
      setStatus(newStatus); // Met à jour le statut local
      window.location.reload(); // Rafraîchit la page
    } else {
      console.error("Échec de la mise à jour du statut");
    }
  } catch (error) {
    console.error("Erreur lors de la mise à jour :", error);
  }
};
  handleChangeStatus(option as IncidentStatus);
