<changeSet id="3" author="oulja">
    <createTable tableName="user_entity">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="username" type="VARCHAR(255)">
            <constraints nullable="false" unique="true"/>
        </column>
        <column name="email" type="VARCHAR(255)"/>
        <column name="password" type="VARCHAR(255)"/>
    </createTable>
</changeSet>

<changeSet id="4" author="oulja">
    <createTable tableName="documentation_entity">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="titre" type="VARCHAR(255)"/>
        <column name="contenu" type="CLOB"/>
        <column name="incident_id" type="BIGINT"/>
    </createTable>

    <addForeignKeyConstraint 
        baseTableName="documentation_entity"
        baseColumnNames="incident_id"
        constraintName="fk_documentation_incident"
        referencedTableName="incident_entity"
        referencedColumnNames="id"/>
</changeSet>


<changeSet id="5" author="oulja">
    <createTable tableName="rapport_resolution_entity">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="rapport" type="CLOB"/>
        <column name="date_resolution" type="TIMESTAMP"/>
        <column name="incident_id" type="BIGINT"/>
    </createTable>

    <addForeignKeyConstraint 
        baseTableName="rapport_resolution_entity"
        baseColumnNames="incident_id"
        constraintName="fk_rapport_incident"
        referencedTableName="incident_entity"
        referencedColumnNames="id"/>
</changeSet>
