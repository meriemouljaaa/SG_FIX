@Data
public class CreateIncidentRequest {
    private String titre;
    private String description;

    private StatutIncident statut; // ou initialisé automatiquement à "soumis" côté service

    private PrioriteIncident priorite;
    private Date dateAttribution;
    private List<String> fichierJoint;
    private String gravite;

    private Integer categorieId; // id de la catégorie
    private Integer clientId;    // id de l'utilisateur qui déclare
    private Integer coeDevId;    // id du développeur qui va résoudre
}
